{
    "distSpecVersion": "1.1.0",
    "storage": {
        "rootDirectory": "/tmp/zot"
    },
    "http": {
        "address": "127.0.0.1",
        "port": "8080",
        "auth": {
            "htpasswd": {
              "path": "test/data/htpasswd"
            }
        },
        "accessControl": {
            "metrics":{
                "users": ["metrics"]
            },
            "repositories": {
                "**": {
                    "anonymousPolicy": [
                        "read"
                    ],
                    "defaultPolicy": ["read","create"]
                }
            }
        }
    },
    "log": {
        "level": "debug"
    },
    "extensions": {
        "metrics": {
            "enable": true,
            "prometheus": {
                "path": "/metrics"
            }
        }
    }
}
